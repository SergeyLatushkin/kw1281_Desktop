<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:viewModels="clr-namespace:kw1281Desktop.PageModels"
             x:DataType="viewModels:AdaptationPageViewModel"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:kw1281Desktop.Behaviors"
             x:Class="kw1281Desktop.Pages.AdaptationPage"
             Title="Adaptation">

    <Grid Padding="20" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Picker Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Addresses}" SelectedItem="{Binding SelectedAddress}"
                ItemDisplayBinding="{Binding Name}" />
        <Picker Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CommandList}" SelectedItem="{Binding SelectedCommand}"
                ItemDisplayBinding="{Binding Name}" />
        <Entry Grid.Row="0"
               Grid.Column="2"
               Keyboard="Numeric"
               Placeholder="Channel"
               Text="{Binding Channel, Mode=TwoWay} ">
            <Entry.Behaviors>
                <local:NumericRangeBehavior Min="0" Max="99" />
            </Entry.Behaviors>
        </Entry >
        <Entry Grid.Row="0"
               Grid.Column="3"
               Keyboard="Numeric"
               Placeholder="Value"
               Text="{Binding Value, Mode=TwoWay}"
               VerticalOptions="End"
               IsEnabled="{Binding IsFieldEnabled}" >
            <Entry.Behaviors>
                <local:NumericRangeBehavior Min="0" Max="65535" />
            </Entry.Behaviors>
        </Entry >
        <Entry Grid.Row="0"
               Grid.Column="4"
               Keyboard="Numeric"
               Placeholder="Login"
               Text="{Binding Login, Mode=TwoWay}" >
            <Entry.Behaviors>
                <local:NumericRangeBehavior Min="0" Max="65535" />
            </Entry.Behaviors>
        </Entry >
        <Button Grid.Row="0"
                Grid.Column="5"
                Text="Run"
                Command="{Binding RunCommand}" />
        <Border Grid.Row="1" Grid.ColumnSpan="6" Stroke="Gray" StrokeThickness="1" BackgroundColor="#f0f0f0"
                Padding="10">
            <ScrollView x:Name="ScrollView">
                <VerticalStackLayout x:Name="LogContainer" Spacing="2" />
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>