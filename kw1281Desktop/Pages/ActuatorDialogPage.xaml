<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="kw1281Desktop.Pages.ActuatorDialogPage"
               WidthRequest="500"
               HeightRequest="135">
    <VerticalStackLayout BackgroundColor="White">
        <Entry WidthRequest="460"
               Text="{Binding Input, Mode=OneWay}"
               VerticalOptions="End"
               IsEnabled="False"
               HorizontalTextAlignment="Center"/>

        <HorizontalStackLayout HorizontalOptions="Center" Padding="10" Spacing="10" >
            <Button Text="Next" Clicked="OnNext" />
            <Button Text="Cancel" Clicked="OnCancel" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
