<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:viewModels="clr-namespace:kw1281Desktop.PageModels"
             x:DataType="viewModels:AppSettingsPageViewModel"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kw1281Desktop.Pages.AppSettingsPage"
             Title="Settings">

    <Grid Padding="20" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Picker Grid.Row="0" Grid.Column="0" Title="Port" ItemsSource="{Binding Ports}"
                SelectedItem="{Binding SelectedPort}" />

        <Picker Grid.Row="0" Grid.Column="1" Title="Baud" ItemsSource="{Binding Bauds}"
                SelectedItem="{Binding SelectedBaud}" />

        <HorizontalStackLayout Grid.Row="1" >
            <CheckBox IsChecked="{Binding IsLoggingEnabled}" />
            <Label Text="Enable logging" VerticalOptions="Center" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>